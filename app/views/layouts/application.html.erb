<!DOCTYPE html>
<html>
  <header>
    <title>SubsLink</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container full-height">
      <div class="row justify-content-center">
        <header class="col-xl-2 col-md-1 p-0 d-none d-md-block full-height">
          <% if request.fullpath.include?("admin") %>
            <%= render "layouts/admin_header" %>
          <% else %>
            <%= render "layouts/user_header" %>
          <% end %>
        </header>
        <main class="col-xl-10 col-md-11 full-height">
          <div class="row">
            <div class="col-lg-9 overflow-auto">
              <p id="notice"><%= notice %></p>
              <%= yield %>
            </div>
            <div class="d-lg-block d-none col-lg-3">
              <%= render 'layouts/sidebar' %>
            </div>
          </div>
        </main>
      </div>
    </div>
    <footer class="fixed-bottom d-md-none">
      <%= render 'layouts/footer' %>
    </footer>
  </body>
</html>