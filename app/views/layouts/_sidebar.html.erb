<div class="d-flex flex-column ps-3 border-start h-100">
	<%= form_with url: subscriptions_search_path, method: :get do |f| %>
		<div class="input-group mb-4 p-3">
			<%= f.text_field :keyword, id: "search", placeholder: "サブスク検索", class: "form-control col-9" %>
			<%= button_tag type: "submit", class: "btn btn-primary col-3" do %>
				<i class="fas fa-search"></i>
			<% end %>
		</div>
	<% end %>

	<div>
		<h3>人気のサブスク</h3>
		<% @top_subscriptions.each do |subsc| %>
			<%= link_to subscription_path(subsc), class: "text-reset text-decoration-none" do %>
				<div class="card card btn btn-hover mb-3">
					<div class="card-body">
						<div class="row">
							<div class="col-xxl-5 d-none d-xxl-block">
								<%= image_tag subsc.get_image, class: "card-img" %>
							</div>
							<div class="col-xxl-7 col-12">
								<h5 class="card-title"><%= subsc.name %></h5>
								<h6 class="card-subtitle mb-2 text-muted">
									￥<%= subsc.price.to_s(:delimited) %>/<%= subsc.update_cycle %>ヵ月
								</h6>
							</div>
						</div>
						<p class="card-text text-truncate"><small class="text-muted"><%= subsc.catch_copy %></small></p>
					</div>
				</div>
			<% end %>
		<% end %>
	</div>
	<div class="d-flex justify-content-center mt-auto">
		<p>CopyRight Sota Aoyagi</p>
	</div>
</div>