<div class="d-flex">
  <%= form_with url: admin_companies_search_path, method: :get do |f| %>
  <div class="input-group mx-3">
    <%= f.text_field :keyword, id: "companySearchForm", placeholder: "会社検索", class: "form-control col-9", 'aria-describedby': :"companySearchButton" %>
    <%= button_tag type: "submit", id: "companySearchButton", class: "btn btn-primary col-3" do %>
      <i class="fas fa-search"></i>
    <% end %>
  </div>
	<% end %>
  <button type="button" class="btn btn-primary rounded-pill btn_shadow my-3 ms-auto" data-bs-toggle="modal" data-bs-target="#companyModal">
    <span class="d-none d-xl-block">会社登録</span>
    <i class="fas fa-plus d-xl-none d-xl-block" style="color: #ffffff;"></i>
  </button>
  <div class="modal fade" id="companyModal" tabindex="-1" aria-labelledby="formModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content p-3">
        <%= render 'admin/companies/new_form', company: @company %>
      </div>
    </div>
  </div>
</div>
<%= render "layouts/error", obj: @company %>
<div class="row row-cols-md-2">
  <% @companies.each do |company| %>
    <div class="mb-3">
      <div class="card btn btn-hover mb-3 h-100">
        <div class="row">
          <div class="d-flex align-items-center col-4">
            <%= image_tag company.get_image %>
          </div>
          <div class="card-body text-start col-8">
            <h5 class="card-title">
              <%= link_to company.name, admin_company_path(company), class: "stretched-link text-reset text-decoration-none" %>
            </h5>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>