<div class="container">
  <%= form_with model: @subsc, url: admin_subscriptions_path, method: :post do |f| %>
    <div class="form-group">
      <%= f.label :サブスク名 %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :イメージ画像 %>
      <%= f.file_field :image, class: "form-control-file user_image", accept: 'image/*' %>
    </div>
    <div class="form-group">
      <%= f.label :説明文 %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :金額 %>
      <%= f.text_field :price, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :会社名 %>
      <%= f.select :company_id, options_from_collection_for_select(Company.all, :id, :name), class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :更新周期 %>
      <%= f.select :update_cycle, *[1..12], class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit "登録する", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>