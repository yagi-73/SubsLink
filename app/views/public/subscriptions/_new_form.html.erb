<%= form_with model: subsc, url: subscriptions_path, method: :post, class: "subscription-form" do |f| %>
  <div class="form-group mb-3">
    <%= f.label :name, 'サブスク名' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group mb-3">
    <%= f.label :price, '金額' %>
    <%= f.text_field :price, class: 'form-control' %>
  </div>
  <div class="form-group mb-3">
    <%= f.label :contract_day, '契約日' %>
    <%= f.date_field :contract_day, class: 'form-control' %>
  </div>
  <div class="form-group mb-3">
    <%= f.label :update_cycle, '更新周期' %>
    <%= f.select :update_cycle, *[1..12], class: 'form-control' %>ヶ月
  </div>
  <div class="form-group mb-3">
    <%= f.submit "登録する", class: 'btn btn-success' %>
  </div>
<% end %>