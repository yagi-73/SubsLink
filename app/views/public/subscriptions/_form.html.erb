<%= form_with model: subsc, url: subscriptions_path, method: :post do |f| %>
  <div class="form-group">
    <%= f.label :サブスク名 %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :金額 %>
    <%= f.text_field :price, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :契約日 %>
    <%= f.date_field :start_time, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :更新周期 %>
    <%= f.select :update_cycle, *[1..12], class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit "登録する", class: 'btn btn-success' %>
  </div>
<% end %>