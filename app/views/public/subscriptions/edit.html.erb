<div class='container'>
  <h2>Myサブスク編集</h2>
  <%= form_with model: @subsc, url: subscription_path(@subsc), method: :patch do |f| %>
    <div class="form-group">
      <%= f.label :サブスク名 %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :金額 %>
      <%= f.text_field :price, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :契約日 %>
      <%= f.date_field :contract_day, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :更新周期 %>
      <%= f.select :update_cycle, *[1..12], class: 'form-control' %>
    </div>
    <p>次回更新日： <%= l @subsc.next_update_day, format: :date %></p>
    <div class="form-group">
      <%= f.submit "更新する", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>