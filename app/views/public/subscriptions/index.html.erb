<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'form', subsc: @subsc%>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>サブスク一覧</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>Price</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @subscriptions.each do |subsc| %>
            <tr>
              <td>
                <%= link_to subscription_path(subsc) do %>
                  <%= image_tag subsc.get_image(100,100) %>
                <% end %>
              </td>
              <td><%= subsc.name %></td>
              <td><%= subsc.price %></td>
              <td><%= subsc.update_cycle %></td>
              <td><% link_to subscription_path(subsc), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>