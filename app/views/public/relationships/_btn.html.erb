<% if current_user != user%>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー解除", user_relationships_path(user.id), method: :delete, class: "btn btn-secondary btn-sm rounded-pill text-nowrap" %>
  <% else %>
    <%= link_to "フォロー", user_relationships_path(user.id), method: :post, class: "btn btn-success btn-sm rounded-pill text-nowrap" %>
  <% end %>
<% end %>