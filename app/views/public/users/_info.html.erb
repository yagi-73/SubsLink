<table class='table'>
  <tr>
    <td><%= image_tag user.get_image(100,100) %></td>
	  <td class='align-middle'>
      <p class="fs-4 fw-bold"><%= user.name %></p>
      <p>登録済サブスク数: <%= user.subscriptions.count %></p></td>
  </tr>
  <tr>
    <td>
      <%= link_to user_followings_path(user), class: "text-reset text-decoration-none" do %>
        <%= user.followings.count %>フォロー
      <% end %>
    </td>
    <td>
      <%= link_to user_followers_path(user), class: "text-reset text-decoration-none" do %>
        <%= user.followers.count %>フォロワー
      <% end %>
    </td>
  </tr>
</table>

<div class='row'>
  <% if current_user != user %>
    <%= render "public/relationships/btn", user: user %>
  <% end %>
</div>