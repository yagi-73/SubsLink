<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>ユーザー情報</h2>
      <%= render 'info', user: @user %>
      <h2>おすすめ</h2>
      <%= render 'public/subscriptions/recommend', subsc: @recommend %>
      <h2 class="mt-3">サブスク登録</h2>
      <%= render 'public/subscriptions/new_form', subsc: @subsc %>
    </div>
    <div class='col-md-8 offset-md-1'>
    <ul class="tab-list list-unstyled">
      <li class="tab tab-active">
        カレンダー
      </li>
      <li class="tab">
        登録済みサブスク
      </li>
    </ul>
    <div class="tabbox-contents">
      <div class="tabbox box-show">
        <h1><%= @user.name %>のカレンダー</h1>
        <%= render 'calender', subscriptions: @subsc_calender, user: @user %>
      </div>
      <div class="tabbox">
        <%= render 'public/subscriptions/index', subscriptions: @subscriptions %>
      </div>
    </div>
  </div>
</div>