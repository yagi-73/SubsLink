<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">サブスク登録</h2>
      <%= render 'public/subscriptions/form', subsc: @subsc %>
    </div>
    <div class='col-md-8 offset-md-1'>
    <h1>My Calender</h1>
      <%= month_calendar attribute: :contract_day, events: @subscriptions do |date, subscriptions| %>
        <%= date.day %><br>
        <% subscriptions.each do |subsc| %>
          ・<%= link_to subsc.name, edit_subscription_path(subsc) %><br>
        <% end %>
      <% end %>
    </div>
  </div>
</div>