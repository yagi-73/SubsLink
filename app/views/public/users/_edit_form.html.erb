<%= form_with model: current_user, url: user_path(current_user), method: :patch, id: "userEditForm" do |f| %>
  <div class="mb-3">
    <label for="inputName" class="form-label">名前</label>
    <%= f.text_field :name, autofocus: true, id: "inputName", class: "form-control", placeholder: "ユーザ名" %>
  </div>
  <div class="mb-3">
    <label for="inputIntroduction" class="form-label">自己紹介文</label>
    <%= f.text_area :introduction, id: "inputIntroduction", class: "form-control", placeholder: "あなたを100文字以内で表現しましょう" %>
  </div>
  <div class="mb-3">
    <label for="inputImage" class="form-label">プロフィール画像</label>
    <%= f.file_field :image, id: "inputImage", class: "form-control", accept: "image/*" %>
  </div>
  <div class="mb-3">
    <%= f.submit "更新する", class: "btn btn-primary me-3" %>
  </div>
<% end %>