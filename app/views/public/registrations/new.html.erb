<div class="container">
  <div class="row">
    <div class="mt-5 mx-auto" style="width: 300px;">
      <h2>新規会員登録</h2>

      <%= form_with model: @user, url: user_registration_path, id: "userSignupForm" do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

          <div class="form-group mb-3">
            <label for="inputName" class="form-label">名前</label>
            <%= f.text_field :name, autofocus: true, id: "inputName", class: "form-control", placeholder: "ユーザ名" %>
          </div>

          <div class="form-group mb-3">
            <label for="inputEmail" class="form-label">メールアドレス</label>
            <%= f.email_field :email, autocomplete: "email", id: "inputEmail", class: "form-control", placeholder: "メールアドレス" %>
          </div>

          <div class="form-group mb-3">
            <label for="inputPassword" class="form-label">パスワード(6文字以上)</label>
            <%= f.password_field :password, id: "inputPassword", 'data-toggle': "password", class: "form-control", placeholder: "パスワード" %>
          </div>

          <div class="form-group mb-3">
            <label for="inputPasswordConfirmation" class="form-label">パスワード(確認用)</label>
            <%= f.password_field :password_confirmation, id: "inputPasswordConfirmation", 'data-toggle': "password", class: "form-control", placeholder: "再度パスワードを入力してください" %>
          </div>

          <div class="form-group mb-3">
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>
      <% end %>
      <span>既に登録済みの方は</span>
      <%= link_to "こちら", new_user_session_path, 'data-turbolinks': false %>
    </div>
  </div>
</div>