<h2>新規会員登録</h2>

<%= form_with model: @user, url: user_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <table cellpadding="5">
    <tr>
      <td>名前</td>
      <td>
        <%= f.text_field :name, autofocus: true %>
      </td>
    </tr>

    <tr>
      <td>メールアドレス</td>
      <td><%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com" %></td>
    </tr>

    <tr>
      <td>パスワード(6文字以上)</td>
      <td><%= f.password_field :password, autocomplete: "new-password" %></td>
    </tr>
    
    <tr>
      <td>パスワード(確認用)</td>
      <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
    </tr>

    <tr>
      <td></td>
      <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
    </tr>
  </table>
<% end %>
<h3>既に登録済みの方</h3>
<%= render "public/shared/links" %>
